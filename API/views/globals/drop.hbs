<div class="modal" tabindex="-1" role="dialog" style="display:block;top:25%;">
  <div class="modal-dialog" role="document">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title">Delete <i>Users</i> table</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure to drop <i>Users</i> table ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-bordeaux" onclick="deleteUser()">Drop</button>
        <a href="../../../" type="button" class="btn btn-orange" data-dismiss="modal">Back</a>
      </div>
    </div>
  </div>
</div>

<script>
    function deleteUser(){
        xhttp = new XMLHttpRequest();
        xhttp.open("DELETE", window.location.href, true);
        xhttp.send();
        setTimeout(() => {
          window.location.href = '../../../';
        }, 500)
    }

</script>